<!DOCTYPE html>
<html>
  <head>
    <title>PhotogramSignin2</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <nav>
      <ul>
        <li>
          <a href="/"> home </a>
        </li>
        <li>
          <a href="/photos"> photos </a>
        </li>
        <li>
          <%=session.fetch(:user_id)%>
        </li>
        <li>
          <a href="/user_sign_up"> sign up! </a>
        </li>
        <li>
          <a href="/user_sign_in"> sign in! </a>
        </li>
        <li>
          <a href="/user_sign_out"> sign out </a>
        </li>
      </ul>
    </nav>
    
    <%if notice.present? %>
      <div style = "border: thin purple solid;">
        <%= notice %>
      </div>
    <%end%>
    <%if alert.present? %>
      <div style = "border: thin red solid;">
        <%= alert%>
      </div>
    <%end%>

    <%= yield %>
  </body>
</html>
